<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thermatk.android.princessviewer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.thermatk.android.princessviewer.PhotosActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thermatk.android.princessviewer.CommentsActivity"
            android:label="@string/comments_caption"
            android:parentActivityName="com.thermatk.android.princessviewer.PhotosActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thermatk.android.princessviewer.PhotosActivity" />
        </activity>
    </application>

</manifest>
